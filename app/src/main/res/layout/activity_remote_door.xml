<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#c2fcfcfc">

    <include
        android:id="@+id/app_bar"
        layout="@layout/action_bar"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textViewInformationRemoteDoor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In diesem Bereich können Sie Ihre Türen mittels Remoteverbindung öffnen"
            android:drawableLeft="@drawable/ic_info"
            android:background="@drawable/info_background"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            />

        <ListView
            android:id="@+id/ListViewRemoteLocksForUser"
            android:layout_width="368dp"
            android:layout_height="391dp"
            android:layout_below="@+id/textViewInformationRemoteDoor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="168dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>