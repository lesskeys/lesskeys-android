<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2fcfcfc"
    android:id="@+id/swiperefreshSubUsers">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/app_bar"
            layout="@layout/action_bar"></include>

        <ListView
            android:id="@+id/subUserList"
            android:layout_width="368dp"
            android:layout_height="439dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/testTextViewSubUserList"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/testTextViewSubUserList"
            android:layout_width="356dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_bar"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:text="Unternutzer"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>