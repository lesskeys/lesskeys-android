<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c2fcfcfc"
    android:id="@+id/swiperefreshProtocol">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout = "@layout/action_bar"
            android:id="@+id/app_bar">
        </include>

        <ListView
            android:id="@+id/protocolList"
            android:layout_width="368dp"
            android:layout_height="439dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/testTextViewAccessProtocol"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/testTextViewAccessProtocol"
            android:layout_width="356dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/app_bar"
            android:layout_marginLeft="10dp"
            android:text="Protokoll"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <Button
            android:id="@+id/button_goToSystemLogRequestActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/testTextViewAccessProtocol"
            android:layout_alignEnd="@+id/testTextViewAccessProtocol"
            android:background="@drawable/notificationbutton_background"
            android:drawableTop="@drawable/ic_notification" />
    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>